<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spybot">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity android:name="com.activities.MainActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.LevelSelection"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.PlayerSelection"
                  android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.PawnShop"
                  android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.SessionMainMenu"
                  android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.SessionSettings"
                  android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.GameSettings"
                  android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.activities.MainMenu"
            android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>