<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/main_background">

    <Button
            android:id="@+id/btnSettings"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="SETTINGS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#000000" android:fontFamily="@font/military"/>

    <Button
            android:id="@+id/btnStart"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="START"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.377" android:textColor="#000000" android:fontFamily="@font/military"/>

    <Button
            android:id="@+id/btnQuit"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Quit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.622" android:textColor="#000000" android:fontFamily="@font/military"/>

    <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:clickable="false"
            android:text="Battlegrounds"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/military"/>
    <TextView
            android:id="@+id/txtCreditsTS_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timo"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCreditsJK_red" android:layout_marginTop="4dp"
            android:fontFamily="@font/military"/>
    <TextView
            android:id="@+id/txtCreditsJK_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Janick"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCreditsAS_red" android:layout_marginTop="4dp"
            android:fontFamily="@font/military"/>
    <TextView
            android:id="@+id/txtCreditsAS_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Andreas"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnQuit"
            android:fontFamily="@font/military"/>

</androidx.constraintlayout.widget.ConstraintLayout>