<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/main_background">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Game Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:fontFamily="@font/military" android:textSize="24sp" android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            <Button
                    android:text="back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnReturnToMainMenu"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="18sp"
                    android:fontFamily="@font/military" android:textColor="#FFFFFF" android:textStyle="bold"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="Master"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView5"
                            android:fontFamily="@font/military" android:textColor="#FFFFFF"/>
                    <SeekBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/seekbarMaster" android:progress="50"
                            android:max="100"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="Music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView6"
                            android:fontFamily="@font/military" android:textColor="#FFFFFF"/>
                    <SeekBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/seekbarMusic" android:progress="5"
                            android:max="99"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="SFX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView7"
                            android:fontFamily="@font/military" android:textColor="#FFFFFF"/>
                    <SeekBar
                            android:layout_width="189dp"
                            android:layout_height="wrap_content" android:id="@+id/seekbarSFX" android:progress="5"
                            android:max="99"/>
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Switch
                    android:text="Soundtrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/switchSoundtrack" android:textOn="Janick"
                    android:textOff="Timo" android:checked="true" android:fontFamily="@font/military"
                    android:textColor="#FFFFFF"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnMuteGame" android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Reset Sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnResetVolume" android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Savegame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:fontFamily="@font/military" android:textColor="#FFFFFF" android:textStyle="bold"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Reset all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnResetSaveGame"
                    android:fontFamily="@font/military"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>