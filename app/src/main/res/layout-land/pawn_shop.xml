<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/main_background">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="154dp"
            tools:layout_editor_absoluteX="304dp" android:id="@+id/tableLayout">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Lorem Ipsum Dolor"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content" android:id="@+id/labelPlayerNameShop"
                    android:textColor="#FFFFFF" android:textStyle="bold" android:fontFamily="@font/military"/>
            <TextView
                    android:text="0€"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content" android:id="@+id/labelPlayerMoneyShop"
                    android:textColor="#FFFFFF" android:textStyle="bold" android:fontFamily="@font/military"/>
            <Button
                    android:text="Change Player"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content" android:id="@+id/playerToggle"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_vertical" android:orientation="vertical">
            <ImageView
                    android:layout_width="138dp"
                    android:layout_height="50dp" tools:srcCompat="@drawable/layer1_military_cavallery"
                    android:id="@+id/icon1"
                    app:srcCompat="@drawable/layer1_military_cavallery"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_horizontal|center_vertical">
                <TextView
                        android:text="Horse"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/nameIcon1"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:textStyle="bold"
                        android:fontFamily="@font/military"/>
                <TextView
                        android:text="1000€"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/moneyIcon1"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:fontFamily="@font/military"/>
            </LinearLayout>
            <Button
                    android:text="buy"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content" android:id="@+id/buyBtnIcon1"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_vertical" android:orientation="vertical">
            <ImageView
                    android:layout_width="138dp"
                    android:layout_height="50dp" tools:srcCompat="@drawable/layer1_military_rocket"
                    android:id="@+id/icon2"
                    app:srcCompat="@drawable/layer1_military_rocket"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_horizontal|center_vertical">
                <TextView
                        android:text="Healer"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/nameIcon2"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:textStyle="bold"
                        android:fontFamily="@font/military"/>
                <TextView
                        android:text="2.000€"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/moneyIcon2"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:fontFamily="@font/military"/>
            </LinearLayout>
            <Button
                    android:text="buy"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content" android:id="@+id/buyBtnIcon2"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_vertical" android:orientation="vertical">
            <ImageView
                    android:layout_width="138dp"
                    android:layout_height="50dp" tools:srcCompat="@drawable/layer1_military_sniper"
                    android:id="@+id/icon3"
                    app:srcCompat="@drawable/layer1_military_sniper"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_horizontal|center_vertical">
                <TextView
                        android:text="Sniper"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/nameIcon3"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:textStyle="bold"
                        android:fontFamily="@font/military"/>
                <TextView
                        android:text="5.000€"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/moneyIcon3"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:fontFamily="@font/military"/>
            </LinearLayout>
            <Button
                    android:text="buy"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content" android:id="@+id/buyBtnIcon3"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_vertical" android:orientation="vertical">
            <ImageView
                    android:layout_width="138dp"
                    android:layout_height="50dp" tools:srcCompat="@drawable/layer1_military_tank"
                    android:id="@+id/icon4"
                    app:srcCompat="@drawable/layer1_military_tank"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_horizontal|center_vertical">
                <TextView
                        android:text="Tank"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/nameIcon4"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:textStyle="bold"
                        android:fontFamily="@font/military"/>
                <TextView
                        android:text="10.000€"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/moneyIcon4"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:fontFamily="@font/military"/>
            </LinearLayout>
            <Button
                    android:text="buy"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content" android:id="@+id/buyBtnIcon4"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_vertical" android:orientation="vertical">
            <ImageView
                    android:layout_width="138dp"
                    android:layout_height="50dp" tools:srcCompat="@drawable/layer1_military_jet" android:id="@+id/icon5"
                    app:srcCompat="@drawable/layer1_military_jet"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_horizontal|center_vertical">
                <TextView
                        android:text="Plane"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/nameIcon5"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:textStyle="bold"
                        android:fontFamily="@font/military"/>
                <TextView
                        android:text="15.000€"
                        android:layout_width="90dp"
                        android:layout_height="19dp" android:id="@+id/moneyIcon5"
                        android:textAlignment="center" android:textColor="#FFFFFF" android:fontFamily="@font/military"/>
            </LinearLayout>
            <Button
                    android:text="buy"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content" android:id="@+id/buyBtnIcon5"
                    android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnBack" android:fontFamily="@font/military"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>