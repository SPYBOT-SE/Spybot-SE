<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/main_background">

    <TableLayout
            android:layout_width="662dp"
            android:layout_height="375dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp" android:layout_marginStart="128dp"
    >

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="bottom">
            <TextView
                    android:text="Main Menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/sessionHeader"
                    android:textAlignment="center" android:gravity="center" android:textSize="50sp"
                    android:textColor="#FFFFFF" android:fontFamily="@font/military"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="left" android:minHeight="16px"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="Arena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnArena"
                    android:fontFamily="@font/military" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="Shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnShop" android:fontFamily="@font/military"
                    android:textSize="24sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Player Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnPlayerSettings"
                    android:fontFamily="@font/military" android:textSize="24sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Level Editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnLevelEditor"
                    android:fontFamily="@font/military"
                    android:textSize="24sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="END SESSION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnEndSession"
                    android:fontFamily="@font/military" android:textSize="24sp"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>